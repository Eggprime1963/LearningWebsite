{
  "version": 2,
  "name": "learning-platform",
  "alias": ["learn.nguyenstudy0504.tech"],
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": "public",
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/css/(.*)",
      "destination": "/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/js/$1"
    },
    {
      "source": "/image/(.*)",
      "destination": "/image/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
