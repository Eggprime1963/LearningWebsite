{
  "name": "Learning Management System",
  "description": "A comprehensive web-based learning platform with AI integration",
  "repository": "https://github.com/Eggprime1963/LearningWebsite",
  "logo": "https://raw.githubusercontent.com/Eggprime1963/LearningWebsite/main/src/main/webapp/image/logo1.jpg",
  "keywords": [
    "education",
    "learning-management-system",
    "java",
    "jakarta-ee",
    "ai-chatbot",
    "mysql",
    "bootstrap"
  ],
  "image": "heroku/java",
  "addons": [
    {
      "plan": "cleardb:ignite",
      "as": "DATABASE"
    }
  ],
  "env": {
    "JAVA_OPTS": {
      "description": "Java runtime options",
      "value": "-Xmx512m -Xms256m"
    },
    "MAVEN_CUSTOM_OPTS": {
      "description": "Maven build options",
      "value": "-DskipTests=true"
    },
    "APP_NAME": {
      "description": "Application name for branding",
      "value": "EduPlatform"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ],
  "stack": "heroku-22",
  "success_url": "/",
  "scripts": {
    "postdeploy": "echo 'Deployment successful! Your Learning Management System is ready.'"
  }
}
